{
	"name": "node-api-boilerplate",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "cross-env NODE_ENV=production node server.js",
		"start-debug": "cross-env DEBUG=node-api-boilerplate:* npm start",
		"start-sandboxed": "npm start -- --flag=sandbox",
		"dev": "nodemon server.js",
		"dev-debug": "cross-env DEBUG=node-api-boilerplate:* npm run dev",
		"dev-sandboxed": "npm run dev -- --flag=sandbox",
		"test": "mocha **/*.test.js --watch",
		"test-nodemon": "nodemon --exec \"mocha **/*.test.js\""
	},
	"dependencies": {
		"body-parser": "~1.18.2",
		"compression": "^1.7.1",
		"cookie-parser": "~1.4.3",
		"cors": "^2.8.4",
		"cross-env": "^5.1.1",
		"debug": "~2.6.9",
		"ejs": "~2.5.7",
		"express": "~4.15.5",
		"express-validation": "^1.0.2",
		"find": "^0.2.7",
		"helmet": "^3.9.0",
		"http-status": "^1.0.1",
		"joi": "^13.0.2",
		"lodash": "^4.17.4",
		"method-override": "^2.3.10",
		"morgan": "~1.9.0",
		"nconf": "^0.9.1",
		"serve-favicon": "~2.4.5"
	},
	"devDependencies": {
		"chai": "^4.1.2",
		"mocha": "^4.0.1"
	}
}
